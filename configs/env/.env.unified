# Babillon Unified System Environment Configuration

# Core System Configuration
BABILLON_VERSION=1.0.0
BABILLON_ENVIRONMENT=unified
NODE_ENV=production

# Network Configuration
BABILLON_NETWORK_NAME=babillon-unified-network
BABILLON_DOMAIN=babillon.local
BABILLON_HTTP_PORT=80
BABILLON_HTTPS_PORT=443

# Service Ports
BABILLON_WEB_PORT=3000
BABILLON_API_PORT=3001
BABILLON_AGENTS_PORT=3002
BABILLON_H3X_PORT=4978
BABILLON_PROTOCOL_PORT=8080
BABILLON_SIR_PORT=9001
BABILLON_LMSTUDIO_PORT=1234

# Database Configuration
MONGODB_URL=mongodb://babillon-mongodb:27017/babillon
MONGODB_DATABASE=babillon
MONGODB_USER=babillon
MONGODB_PASSWORD=babillon_secure_pass_2025

REDIS_URL=redis://babillon-redis:6379
REDIS_PASSWORD=redis_secure_pass_2025

POSTGRES_HOST=babillon-postgresql
POSTGRES_PORT=5432
POSTGRES_DB=babillon
POSTGRES_USER=babillon
POSTGRES_PASSWORD=postgres_secure_pass_2025

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafana_admin_2025

# Security Configuration
JWT_SECRET=babillon_jwt_secret_key_super_secure_2025
SESSION_SECRET=babillon_session_secret_super_secure_2025
ENCRYPTION_KEY=babillon_encryption_key_32_chars_long

# API Keys and External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_KEY=
AZURE_OPENAI_ENDPOINT=

# LMStudio Configuration
LMSTUDIO_API_URL=http://babillon-lmstudio:1234
LMSTUDIO_MODEL_PATH=/models
LMSTUDIO_MAX_TOKENS=2048
LMSTUDIO_TEMPERATURE=0.7

# H3X System Configuration
H3X_SERVER_URL=http://babillon-h3x-server:4978
H3X_API_KEY=h3x_api_key_secure_2025
H3X_WEBSOCKET_URL=ws://babillon-h3x-server:4978/ws

# SIR Controller Configuration
SIR_CONTROLLER_URL=http://babillon-sir-controller:9001
SIR_API_KEY=sir_api_key_secure_2025
SIR_WEBSOCKET_URL=ws://babillon-sir-controller:9001/ws

# Protocol Server Configuration
PROTOCOL_SERVER_URL=http://babillon-protocol:8080
PROTOCOL_API_KEY=protocol_api_key_secure_2025

# Real-time Data Configuration
WEATHER_API_KEY=
FINANCIAL_API_KEY=
NEWS_API_KEY=

# Feedback System Configuration
FEEDBACK_PROCESSOR_URL=http://babillon-feedback-processor:3003
FEEDBACK_STORAGE_PATH=/data/feedback
FEEDBACK_ANALYSIS_INTERVAL=300

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Docker Configuration
DOCKER_COMPOSE_FILE=docker-compose.babillon-unified.yml
DOCKER_REGISTRY=
DOCKER_NAMESPACE=babillon

# Backup Configuration
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Development Configuration (Override in .env.local)
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_DEBUGGING=false

# Feature Flags
ENABLE_H3X_INTEGRATION=true
ENABLE_SIR_INTEGRATION=true
ENABLE_REAL_TIME_DATA=true
ENABLE_FEEDBACK_SYSTEM=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# Scaling Configuration
AUTO_SCALING_ENABLED=false
MIN_REPLICAS=1
MAX_REPLICAS=5
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80

# SSL/TLS Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/babillon.crt
SSL_KEY_PATH=/etc/ssl/private/babillon.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# External Service URLs
EXTERNAL_API_BASE_URL=https://api.babillon.com
WEBHOOK_BASE_URL=https://webhooks.babillon.com
CDN_BASE_URL=https://cdn.babillon.com

# Time Zone Configuration
TZ=UTC
LOCALE=en_US.UTF-8

# Resource Limits
NODEJS_MAX_MEMORY=512m
MONGODB_MAX_MEMORY=1g
REDIS_MAX_MEMORY=256m
POSTGRES_MAX_MEMORY=512m

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance"
MAINTENANCE_BYPASS_TOKEN=

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_SAMPLING_RATE=1.0
METRICS_COLLECTION_INTERVAL=60

# Communication Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000
