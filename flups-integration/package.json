{
  "name": "h3x-flups",
  "version": "1.0.0",
  "description": "H3X: Advanced hexagonal base system with optimized fLupper triad components",
  "main": "H3X-merger.js",
  "scripts": {
    "start": "node H3X-merger.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 8080",
    "ui": "node merger-ui-server.js",
    "api": "node src/backend/h3x-api-server.js",
    "backend": "concurrently \"npm run ui\" \"npm run api\"",
    "dev:full": "concurrently \"npm run backend\" \"npm run dev\"",
    "checkpoint": "powershell -ExecutionPolicy Bypass -File daily-checkpoint.ps1",
    "docker:build": "docker-compose -f docker-compose.h3x.yml build",
    "docker:up": "docker-compose -f docker-compose.h3x.yml up -d",
    "docker:down": "docker-compose -f docker-compose.h3x.yml down",
    "docker:logs": "docker-compose -f docker-compose.h3x.yml logs -f",
    "docker:clean": "docker-compose -f docker-compose.h3x.yml down -v --rmi all",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "experimental": "vite --open /hexperiments.html",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Linting not configured yet'",
    "clean": "rimraf dist coverage test-results node_modules/.vite",
    "postinstall": "echo 'H3X System ready for development'",
    "docker:build": "powershell -ExecutionPolicy Bypass -File docker-manage.ps1 -Command build",
    "docker:up": "powershell -ExecutionPolicy Bypass -File docker-manage.ps1 -Command up",
    "docker:down": "powershell -ExecutionPolicy Bypass -File docker-manage.ps1 -Command down",
    "docker:logs": "powershell -ExecutionPolicy Bypass -File docker-manage.ps1 -Command logs",
    "docker:status": "powershell -ExecutionPolicy Bypass -File docker-manage.ps1 -Command status",
    "docker:clean": "powershell -ExecutionPolicy Bypass -File docker-manage.ps1 -Command clean",
    "docker:setup-dev": "powershell -ExecutionPolicy Bypass -File docker-import-helper.ps1 -Operation setup-dev",
    "docker:setup-prod": "powershell -ExecutionPolicy Bypass -File docker-import-helper.ps1 -Operation setup-prod",
    "docker:verify": "powershell -ExecutionPolicy Bypass -File docker-import-helper.ps1 -Operation verify",
    "docker:export": "powershell -ExecutionPolicy Bypass -File docker-import-helper.ps1 -Operation export-all"
  },
  "keywords": [
    "h3x",
    "hexagonal",
    "database",
    "fLups",
    "triad",
    "visualization",
    "modular"
  ],
  "author": "H3X Development Team",
  "license": "MIT",
  "dependencies": {
    "@types/three": "^0.176.0",
    "@types/ws": "^8.18.1",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "three": "^0.176.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.15.24",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "sass": "^1.89.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  }
}
