{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "noEmit": false,
    "incremental": false,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "strict": true
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "tests/**/*", "coverage", "dist"]
}
