    }, this.frequency);
  }

  stop() {
    if (!this.isRunning) return;
    
    console.log("⏹️ Stopping {{DATA_TYPE}} data simulator...");
    this.isRunning = false;
    
    if (this.interval) {
      clearInterval(this.interval);
      this.interval = null;
    }
  }

  generateData() {
    return {
      simulatorId: this.simulatorId,
      dataType: this.dataType,
