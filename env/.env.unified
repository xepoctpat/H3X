# H3X Unified System Environment Configuration
# This file contains all environment variables for the integrated H3X-fLups system

# ================================
# CORE SYSTEM CONFIGURATION
# ================================
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# ================================
# H3X CORE SERVICES
# ================================
H3X_API_PORT=8080
H3X_WEBSOCKET_PORT=8081
H3X_MODE=unified
H3X_LOG_LEVEL=info

# ================================
# DATABASE CONFIGURATION
# ================================
# MongoDB
MONGODB_URI=mongodb://mongodb:27017/h3x_unified
MONGODB_DB=h3x_unified
MONGODB_USER=h3x_admin
MONGODB_PASSWORD=h3x_secure_password_2025

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis_secure_password_2025
REDIS_DB=0

# ================================
# LM STUDIO CONFIGURATION
# ================================
LMSTUDIO_URL=http://h3x-lmstudio:1234
LMSTUDIO_API_KEY=
LMSTUDIO_MODEL_PATH=/models
LMSTUDIO_CORS_ALLOW_ORIGIN=*
LMSTUDIO_MAX_TOKENS=2048
LMSTUDIO_TEMPERATURE=0.7

# ================================
# REAL-TIME DATA APIS
# ================================
# Weather API (OpenWeatherMap)
WEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
WEATHER_UPDATE_INTERVAL=300000

# Financial APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
COINAPI_KEY=your_coinapi_key_here

# Social Media APIs (optional)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# ================================
# FEEDBACK LOOP CONFIGURATION
# ================================
FEEDBACK_ENABLE=true
FEEDBACK_UPDATE_INTERVAL=60000
FEEDBACK_MAX_HISTORY=1000
FEEDBACK_LEARNING_RATE=0.01
FEEDBACK_MOMENTUM_FACTOR=0.9
FEEDBACK_VOLATILITY_THRESHOLD=0.1

# Virtual Pulse Configuration
PULSE_ENABLE=true
PULSE_FREQUENCY=0.1
PULSE_AMPLITUDE=1.0
PULSE_PHASE_SHIFT=0

# ================================
# FLUPS INTEGRATION
# ================================
FLUPS_PORT=8080
FLUPS_API_PORT=3000
FLUPS_UI_PORT=8082
FLUPS_BUILD_MODE=production
FLUPS_ENABLE_EXPERIMENTS=true

# ================================
# MONITORING & HEALTH
# ================================
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLE=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ================================
# SECURITY CONFIGURATION
# ================================
JWT_SECRET=h3x_jwt_secret_key_2025_unified_system
API_RATE_LIMIT=100
CORS_ORIGIN=*
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# ================================
# DEVELOPMENT SETTINGS
# ================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_DEV_TOOLS=false
HOT_RELOAD=false

# ================================
# DOCKER NETWORK
# ================================
DOCKER_NETWORK=hex-flup-network
CONTAINER_PREFIX=h3x
