{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist/scripts",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "incremental": false,
    "noEmit": false
  },
  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist",
    "coverage"
  ]
}
